<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewloai"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/hinhlistsp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/baseline_home_24"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3EDED"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tenlistsp"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:text="ten san pham"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/gialistsp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10000 d"
                    android:textColor="#DC0000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvChitietlist"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="#651FBA"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="BUY"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>